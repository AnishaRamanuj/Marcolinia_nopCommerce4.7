@model ConfigurationModel
@{
    Layout = "_AdminLayout";
    NopHtml.SetActiveMenuItemSystemName("SS.Plugin.Widgets.EmailOTPActivate");
}
<form asp-controller="EmailOTPActivate" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("SS.Plugin.Widgets.EmailOTPActivate")
        </h1>
        <div class="float-right"></div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-3">
                                    <nop-label asp-for="@Model.Enabled" />
                                </div>
                                <div class="col-md-3">
                                    <nop-editor asp-for="@Model.Enabled" />
                                    <span asp-validation-for="@Model.Enabled"></span>
                                </div>
                            </div>
                            <nop-nested-setting asp-for="Enabled" id="pnlEnabled" disable-auto-generation="true">
                                <div class="form-group row" id="pnlExpireTime">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.ExpireTime" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="@Model.ExpireTime" />
                                        <span asp-validation-for="@Model.ExpireTime"></span>
                                    </div>
                                </div>
                                <div class="form-group row" id="pnlNoOfAttempts">
                                    <div class="col-md-3">
                                        <nop-label asp-for="@Model.NoOfAttempts" />
                                    </div>
                                    <div class="col-md-9">
                                        <nop-editor asp-for="@Model.NoOfAttempts" />
                                        <span asp-validation-for="@Model.NoOfAttempts"></span>
                                    </div>
                                </div>
                            </nop-nested-setting>
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" name="save" id="btnSave" class="btn btn-primary">@T("Admin.Common.Save")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<script asp-location="Footer">
    $(document).ready(function () {
        $("#@Html.IdFor(model => model.Enabled)").click(toggleShowOnHomepage);
        toggleShowOnHomepage();
    });

    function toggleShowOnHomepage() {
        if ($('#@Html.IdFor(model => model.Enabled)').is(':checked')) {
            $('#pnlEnabled').showElement();
        } else {
            $('#pnlEnabled').hideElement();
        }
    }
</script>
